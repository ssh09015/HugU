<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/home_quiz_popup_radius"
    android:backgroundTint="@color/white"
    tools:context=".fragment.HomeFragment">
    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="399dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_black"
            android:text="정답입니다">
        </TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/home_quiz_popup_correct">
        </ImageView>
        <TextView
            android:id="@+id/yes_body"
            android:layout_width="262dp"
            android:layout_height="175dp"
            android:layout_marginLeft="11dp"
            android:gravity="center"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/black"
            android:text="일반 수용자는 재복역률이 3년 안에 25%입니다. \n\n반면, 세움에서 수용자 자녀를 지원했을 때, 부모가\n\n다시 복역하는 비율은 5.7%에 머물렀습니다."
            android:textSize="13dp">
        </TextView>
        <ImageView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/home_quiz_popup_next">
        </ImageView>
    </LinearLayout>

</FrameLayout>