<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/splash_seum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/baseline"
        app:layout_constraintBottom_toTopOf="@+id/baseline"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="31dp"
        android:text="1화 프롤로그1"
        android:textColor="#252525"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintBottom_toTopOf="@id/baseline"
        app:layout_constraintStart_toEndOf="@+id/iv_title" />
    
    <View
        android:id="@+id/baseline"
        android:layout_width="232dp"
        android:layout_height="2dp"
        android:layout_marginEnd="22dp"
        android:background="#66C4C4C5"
        app:layout_constraintStart_toEndOf="@+id/iv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>